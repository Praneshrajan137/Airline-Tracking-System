# ==========================================
# AIRLINE TRACKER - ENVIRONMENT VARIABLES
# ==========================================
# IMPORTANT: Never commit .env file to Git!
# Copy this file to .env and fill in real values

# FlightAware API Configuration
# Get your API key: https://www.flightaware.com/commercial/aeroapi/
FLIGHTAWARE_API_KEY=your_flightaware_api_key_here
FLIGHTAWARE_BASE_URL=https://aeroapi.flightaware.com/aeroapi

# OpenAI API Configuration
# Get your API key: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.3

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CACHE_TTL_SECONDS=300

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_FLIGHT_DATA=flight-data-updated
KAFKA_CONSUMER_GROUP=llm-summary-service

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=airline_tracker
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Application Configuration
SERVER_PORT_GATEWAY=8080
SERVER_PORT_FLIGHTDATA=8081
SERVER_PORT_LLMSUMMARY=8082
SERVER_PORT_EUREKA=8761

# Monitoring & Logging
LOG_LEVEL=INFO
SPRING_BOOT_ADMIN_URL=http://localhost:9090

# Performance Tuning
CACHE_HIT_RATE_THRESHOLD=0.7
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_MS=5000

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_REQUESTS_PER_MINUTE=100
